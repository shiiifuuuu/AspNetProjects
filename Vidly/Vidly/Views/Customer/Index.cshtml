@model Vidly.Models.CustomerViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="tableList">
	<tr>
		<th>Sl no.</th>
		<th>Customers</th>
	</tr>
	@{ int count = 0;}
	@foreach (var customer in Model.Customers)
	{
		<tr>
			<th>@(++count)</th>
			<th>@Html.ActionLink(@customer.Name, "Details","Customer",new{@customer.Id},null)</th>
		</tr>
	}
</table>

